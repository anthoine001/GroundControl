

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 1, 1, 1, 1

<MainWidget>:

<ParameterScreen>:
    cols: 2
    Label:
        text: "Profil de mission"
        size_hint: None, None
        width: "150dp"
        height: "30dp"
        color: 1, 0.5, 0
    Label:
        text: ""
        size_hint: None, None
        height: "30dp"
    Label:
        text: "Launch"
        size_hint: None, None
        height: "30dp"
    TextInput:
        id: launch_tx
        size_hint: None, None
        width: "100dp"
        height: "30dp"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Propulsion End"
        size_hint: None, None
        height: "30dp"
    TextInput:
        id: propulsion_end_tx
        size_hint: None, None
        width: "100dp"
        height: "30dp"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Apogee"
        size_hint: None, None
        height: "30dp"
    TextInput:
        id: apogee_tx
        size_hint: None, None
        width: "100dp"
        height: "30dp"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Parachute Deployment"
        size_hint: None, None
        height: "30dp"
    TextInput:
        id: parachute_tx
        size_hint: None, None
        width: "100dp"
        height: "30dp"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Landing"
        size_hint: None, None
        height: "30dp"
    TextInput:
        id: landing_tx
        size_hint: None, None
        width: "100dp"
        height: "30dp"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Button:
        size_hint: None, None
        width: "150dp"
        height: "30dp"
        text: "Retour Ground Station"
        on_press: app.manager.pop()


<SpaceXWidget>:
    size_hint: 1., None
    size: 1., dp(150)
    canvas:
        Color:
            rgb: 1,1,1
        Line:
            width: 1.
            circle:
                (self.center_x, -600, 700, -45, 45)


<ControleTir>:
    cols: 2
    BackgroundLabel:
        text: root.heure
        color: 0,0,0
        size_hint: 1.3, None
        height: 30

    Button:
        pos: 0, 0
        text: "Mise a feu"
        background_color: 1, 0, 0
        size_hint: 1, None
        height: 30
        pos_hint: {"y" : 1}
        on_press: root.on_button_click()
        disabled: root.launched

    Label:
        text: "Depuis le decollage:"
    Label:
        text: root.since_launch
    Button:
        text: "Parametres"
        on_press: app.manager.push("Parametres")

<MyScreenManager>
    Screen:
        name: "Controle"
        MainWidget:

    Screen:
        name: "Parametres"
        ParameterScreen:

<MenuPrincipal@BoxLayout>
    orientation: "vertical"
    Button:
        text: "aller vers l'écran de contrôle"
        on_press: app.manager.push("Controle")
    Button:
        text: "aller vers l'écran Parametres"
        on_press: app.manager.push("Parametres")





